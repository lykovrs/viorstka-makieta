$border-color = #010101

*
  box-sizing border-box


body
  background #fff
  font-family Arial

.page
  position relative
  margin 0 auto
  padding 0
  max-width 958px
  border 2px solid $border-color
  display flex
  flex-direction column
  min-height 100vh
  z-index 0

  &:after,
  &:before
    content ''
    display block
    position absolute
    top 0
    bottom 0

  &:after
    left -32px
    right -32px
    background center 75px url("imgs/bg.png") no-repeat
    z-index -1

  &:before
    left 0
    right 0
    background #72c4f6
    z-index -2

  &__header

    min-height 550px

  &__content
    //background #cfc
    flex-grow 2

  &__footer
    background transparent
    border-top 2px solid $border-color
    padding 84px 96px
    //width 468px

// header
.header
  &__logo
    padding-top 16px
    position relative
    margin 0 auto
    width 150px
    height 90px
    justify-content center
    display flex
    background url("imgs/plash.png")
    background-position-y -2px
    background-repeat no-repeat

  &__title
    font-weight normal
    margin 0
    font-size 46px
    padding 0 64px 76px
    text-align center
    margin-top 276px


.block
  padding 80px 96px
  position relative

  &:before
    content ""
    display block
    position absolute
    z-index -1
    top 0
    left 0
    right 0
    border-top 2px solid $border-color

.play
  &__link
    display block
    border 2px solid $border-color
    border-radius 4px
    width 150px
    height 80px
    background center center url("imgs/play.png") no-repeat

.general-info
  display flex

  &__text
    margin-right 60px
    max-width 600px

  p
    margin-top 0


// People
.people
    margin 0
    padding 0
    list-style none
    display flex
    justify-content space-around

    &__item
      width 300px
      text-align center
      font-weight 600

    &__figure
      margin 0 auto
      width 150px
      height 150px
      border-radius 150px
      border 2px solid transparent
      padding 4px
      margin-bottom 16px

      &:hover
        border-color #fff

    &__avatar
      width 138px
      height 138px
      display block

    &__name
      margin-bottom 60px

    &__text
      font-weight normal
      text-align center
      max-width 294px

.footer
  &__text
    width 468px

.social
  list-style none
  margin 0
  padding 0

  &__network
    display inline-block


  &__link
    display block
    width 24px
    height 24px
    background $border-color

.menu
  list-style none
  margin 0
  padding 0

  &__list
    padding 0

  &__item
    display inline-block
    padding-left 18px

    &:first-child
      padding-left 0

    &_caption_copyright
      padding-left 80px

    a
      text-decoration none
      color: inherit

      &:hover
        text-decoration underline
        color: inherit

      &:active
        color: inherit