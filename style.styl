$border-color = #010101

*
  box-sizing border-box


body
  background #fff
  font-family Arial
  padding 0
  margin 0

p
  line-height 1.5rem
  margin-bottom 26px
  margin-top 0

  &:last-child
    margin-bottom 0

// Page
.page
  position relative
  margin 0 auto
  padding 0
  width 958px
  border 2px solid $border-color
  display flex
  flex-direction column
  min-height 100vh
  z-index 0

  &:after,
  &:before
    content ''
    display block
    position absolute
    top 0
    bottom 0

  &:after
    left -32px
    right -32px
    background center 75px url("imgs/bg.png") no-repeat
    z-index -1

  &:before
    left 0
    right 0
    z-index -2

  #color-1:checked ~ &:before
    transition 1s background
    background #72c4f6
  #color-2:checked ~ &:before
    transition 1s background
    background #ff8283
  #color-3:checked ~ &:before
    transition 1s background
    background #ffe05d


  &__header

    min-height 550px

  &__content
    flex-grow 2

  &__footer
    background transparent
    border-top 2px solid $border-color
    padding 80px 96px

// header
.header
  &__logo
    padding-top 16px
    position relative
    margin 0 auto
    width 150px
    height 90px
    justify-content center
    display flex
    background url("imgs/plash.png")
    background-position-y -2px
    background-repeat no-repeat

  &__title
    font-weight normal
    margin 0
    font-size 46px
    padding 0 64px 76px
    text-align center
    margin-top 276px


.block
  padding 80px 96px
  position relative

  &:before
    content ""
    display block
    position absolute
    z-index -1
    top 0
    left 0
    right 0
    border-top 2px solid $border-color

.play
  &__link
    display block
    border 2px solid $border-color
    border-radius 4px
    margin 4px 0 12px 0
    width 138px
    height 80px
    background center center url("imgs/play.png") no-repeat



.general-info
  display flex

  &__text
    margin-right 84px
    max-width 460px



// People
.people
    margin 0
    padding 0
    list-style none
    display flex
    justify-content space-around

    &__item
      text-align center
      font-weight 600
      position relative

    &__figure
      margin 0 auto
      width 150px
      height 150px
      border-radius 150px
      border 2px solid transparent
      padding 4px
      position relative
      display block

      &:hover,
      #color-1:checked ~ .page &[for="color-1"],
      #color-2:checked ~ .page &[for="color-2"],
      #color-3:checked ~ .page &[for="color-3"]
        transition 1s border-color
        border-color #fff

    &__avatar
      width 138px
      height 138px
      display block
      position absolute
      top 50%
      left 50%
      margin-top -69px
      margin-left -69px

    &__name
      margin-bottom 22px

    &__text
      font-weight normal
      text-align center
      width 310px
      margin-left -155px
      left 50%
      position absolute
      opacity: 0

      #color-1:checked ~ .page [for="color-1"] ~ &,
      #color-2:checked ~ .page [for="color-2"] ~ &,
      #color-3:checked ~ .page [for="color-3"] ~ &
        transition 1s opacity
        opacity 1

.history
  position relative
  &:after
    content ""
    display block
    position absolute
    z-index -1
    top 0
    bottom 0
    left -40px
    right -40px
    background center 434px url("imgs/main_bg.png") no-repeat

  &__people-1
    margin-bottom 238px

  &__people-2
    margin-top 678px

  &__text
    margin-bottom 0
    width 282px
    text-align center

    &_type_right
      position relative
      left 470px

    &_step_2
      margin-top 635px

    &_step_3
      margin-top 625px
      width 300px
      position relative
      left -18px

.footer
  &__text
    width 458px
    margin-bottom 22px
  &__navigation
    position relative
    top 70px

.social
  list-style none
  margin 0
  padding 0
  font-size 0

  &__network
    display inline-block
    margin-right 9px


  &__link
    display block
    width 24px
    height 24px
    background $border-color
    background url('data:image/png;base64,');

    &_type_fb
      background-position -10px -10px
    &_type_hb
      background-position -54px -10px
    &_type_ig
      background-position -10px -54px
    &_type_tw
      background-position -54px -54px
    &_type_vk
      background-position -98px -10px
    &_type_yt
      background-position -98px -54px

.menu
  list-style none
  margin 0
  padding 0

  &__list
    padding 0

  &__item
    display inline-block
    padding-left 18px

    &:first-child
      padding-left 0

    &_caption_copyright
      padding-left 80px

  &__link
    text-decoration none
    color: inherit

    &:hover
      text-decoration underline
      color: inherit

    &:active
      color: inherit

.color-changer
  display none
