*
  box-sizing border-box

body
  background #fff
  font-family Arial

.page
  position relative
  margin 0 auto
  padding 0
  max-width 958px
  border 2px solid #010101
  display flex
  flex-direction column
  min-height 100vh
  z-index 0


  &:before
    content ''
    display block
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background #72c4f6
    z-index -1

  &__header
    background center 100px url("imgs/bg.png")  no-repeat
    min-height 550px
    margin 0 -18px

  &__content
    background #cfc
    flex-grow 2

  &__footer
    background transparent
    border-top 2px solid #010101
    padding 84px 96px
    //width 468px

// header
.header
  &__logo
    padding-top 16px
    position relative
    margin 0 auto
    width 138px
    height 90px
    justify-content center
    display flex
    background url("imgs/plash.png")
    background-position-y -2px
    background-repeat no-repeat

  &__title
    font-weight normal
    margin 0
    font-size 46px
    padding 0 64px 76px
    text-align center
    margin-top 276px





.footer
  &__text
    width 468px

.social
  list-style none
  margin 0
  padding 0

  &__network
    display inline-block


  &__link
    display block
    width 24px
    height 24px
    background #010101

.menu
  list-style none
  margin 0
  padding 0

  &__list
    padding 0

  &__item
    display inline-block
    padding-left 18px

    &:first-child
      padding-left 0

    &_caption_copyright
      padding-left 80px

    a
      text-decoration none
      color: inherit

      &:hover
        text-decoration underline
        color: inherit

      &:active
        color: inherit